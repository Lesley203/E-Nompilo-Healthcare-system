@using E_Nompilo_Healthcare_system.Areas.Identity.Data;
@model IEnumerable<HealthcareSystemUser>

@{
    ViewData["Title"] = "System_User";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    int rowCount = 0;

}
<div class="form-container">

    <form method="get" asp-controller="Dashboard" asp-action="System_User_Book" class="form-inline">
        @* <input class="form-control " value="@ViewData["CurrentFilter"]" type="text" name="searchEmail" placeholder="Search by Email" aria-label="Search">
        <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Search</button>*@
        <div class="container1t">
            <input type="text" id="box" placeholder="Search by Email" aria-label="Search" value="@ViewData["CurrentFilter"]" name="searchEmail" class="search__box">
            <button type="submit"> <i class="fas fa-search search__icon" id="icon" onclick="toggleShow()"></i></button>
        </div>
    </form>

</div>
<br>
<div class="container ">
    

    @if (Model != null && Model.Any())
    {
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Date of Birth</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        rowCount++;
                        <tr>
                            <td>@rowCount</td>
                            <td>@user.Gender</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumb</td>
                            <td>@user.DateofBirth</td>
                            <td>
                                <a asp-controller="Walk_In" asp-action="AdminCreateAppointment" asp-route-ID="@user.Id" class="btn btn-primary">Book</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    }
    else
    {

    }
</div>
<style>
    /* Custom CSS for the search form */
    .form-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .search__icon {
        box-sizing: border-box;
        float: right;
        font-size: 2.1rem;
        display: inline-block;
        /*   justify-content: center;
          align-items: center; */
        margin-left: .8rem;
        margin-top: -5px;
        margin-bottom: 1px;
        cursor: pointer;
        position: absolute;
        color: #fa983a;
        transition: all .25s ease-in;
        border-radius: 50%;
    }

    /* Custom CSS for the table */
    .table-container {
        margin: 0 auto;
        width: 90%;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ccc;
        }

        .table th {
            background-color: #333;
            color: #fff;
        }

</style>

<script>
    function toggleShow() {
        var el = document.getElementById("box");
        el.classList.toggle("show");
    }
</script>