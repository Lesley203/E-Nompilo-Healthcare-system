@model IEnumerable<E_Nompilo_Healthcare_system.Models.VaccineScreening>

@{
    ViewData["Title"] = "Report_Review_Screening";
    Layout = "~/Views/Shared/_VaccinationLayout.cshtml";
}



<h2 class="text-center">Vaccination Screening</h2>
<hr />
<!-- Filter form with horizontal layout -->
<form asp-controller="Vaccination" asp-action="FilterByDateAnd_Scre" method="get" class="form-inline">
    <div class="form-group mx-sm-3 mb-2">
        <label for="startDate" class="">From:</label>
        <input class="form-control" type="date" id="startDate" name="startDate" required>
    </div>

    <div class="form-group mx-sm-3 mb-2">
        <label for="endDate" class="">To:</label>
        <input class="form-control" type="date" id="endDate" name="endDate" required>
    </div>

    <button class="btn btn-primary mb-2" type="submit">Filter</button>

    <a href="javascript:window.print()" role="tab" class="ml-9 ">
        <span class="float-end float-right "><i style="font-size:32px;" class="fa fa-print"></i></span>
    </a>
</form>


<form asp-controller="Reports" asp-action="GenerateReport" method="get">
</form>
<div class="card-body">
    <header class="invoice-header">
        <div class="logo">
            <img src="~/images/111.png" style="top:110px;  width:300px; height:200px; font-size:20px;" class="  imgg float-start">
        </div>
        <div class="invoice-details">

            <h2>e-Nomplo Healthcare</h2>
            <p>Easatern Cape, Korten</p>
            <p><i class="uil uil-envelope-alt me-1"></i> e-Nompilo@yahoo.com</p>
            <p><i class="uil uil-phone me-1"></i> 012-345-6789</p>
        </div>
    </header>
    <hr class="my-4">

    <div class="row">
        <div class="col-sm-6">
            <div class="text-muted">

                <p class="mb-1">4068 Post Avenue Newfolden, MN 56738</p>
                <p class="mb-1">+ 01 677 567 88</p>
                <p>A</p>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cough)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dizzines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abdominalpain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Headache)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.legswelling)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.snezzing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChestPressure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Allergy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TakenVac)
            </th>
            <th>
               Date
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cough)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dizzines)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abdominalpain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Headache)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.legswelling)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.snezzing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChestPressure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Allergy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Days)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TakenVac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetDateSurvay)
            </td>
           
        </tr>
}
    </tbody>
</table>
