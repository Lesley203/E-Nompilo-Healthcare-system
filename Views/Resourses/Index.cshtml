@model IEnumerable<E_Nompilo_Healthcare_system.Models.Resourses>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_FamilyPlanLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InformationID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContraceptiveMethods)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Effectiveness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HealthBenefits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SideEffects)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reversibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailabilityandAccess)
            </th>
