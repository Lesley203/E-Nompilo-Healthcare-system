@model E_Nompilo_Healthcare_system.Models.AppointmentModel

@{
    ViewData["Title"] = "Update_Appointment";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var timeList = ViewBag.TimeList as SelectList ?? new SelectList(new List<TimeSpanModel>(), "ID", "Get_Time");
}

<h3 class="text-primary">Update_Appointment</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-container">
            <form asp-action="Update_Appointment" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BookingId" value="@Model.BookingId" />
                <div class="form-group">
                    <label asp-for="DateofAppointment" class="control-label"></label>
                    <input asp-for="DateofAppointment" class="form-control" />
                    <span asp-validation-for="DateofAppointment" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Time" class="control-label"></label>
                    <select asp-for="Time" class="form-control" id="MedicationId" required>
                        <option selected disabled value="">Select Medication.......</option>
                        @foreach (TimeSpanModel item in ViewBag.TimeList)
                        {
                            <option value="@item.ID">@item.Get_Time</option>
                        }
                    </select>
                    
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label hidden asp-for="Notes" class="control-label"></label>
                    <input hidden asp-for="ConsultingPerson" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypeOfAppointment" class="control-label"></label>
                    <input asp-for="TypeOfAppointment" class="form-control" />
                    <span asp-validation-for="TypeOfAppointment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Notes" class="control-label"></label>
                    <input asp-for="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label hidden asp-for="Notes" class="control-label"></label>
                    <input hidden asp-for="FirstTimeVisit" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-update" />
                    <a asp-controller="Walk_In" asp-action="AppointmentDetailsTab" class="btn btn-back">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
   
</div>

<style>

    /* Add this style for button hover effect */
    .btn-primary:hover {
        background-color: #0056b3; /* Darker blue on hover */
    }

    /* Style for the "Update" button */
    .btn-update {
        background-color: #007bff; /* Primary blue */
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease; /* Smooth background color transition */
    }

    /* Style for the "Back to List" button */
    .btn-back {
        background-color: #007bff; /* Primary blue */
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease; /* Smooth background color transition */
    }

        /* Add this style for button hover effect */
        .btn-back:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

    /* Style for the form container */
    .form-container {
        width: 400px;
        margin: 0 auto;
        padding: 20px;
