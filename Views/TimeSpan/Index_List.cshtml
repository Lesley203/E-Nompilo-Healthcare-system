@model IEnumerable<E_Nompilo_Healthcare_system.Models.TimeSpanModel>

@{
    ViewData["Title"] = "Index_List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index_List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Get_Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Get_Time)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <form asp-controller="TimeSpan" asp-action="Index_delete" asp-route-Id="@item.ID">
                        <input type="hidden" asp-for="@item.ID">
                         <button type="submit" >Delete</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
