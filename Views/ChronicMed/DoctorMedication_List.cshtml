@model List<E_Nompilo_Healthcare_system.Models.Add_Medication_Model>
@{

    ViewData["Title"] = "DoctorMedication_List";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    int row = 0;
}
<div class="container container-fluid bg-primary">
    <h3 class="text text-white text-center">Available Medications</h3>
</div>

<header>
    <style>




        input[type="search"] {
            -webkit-appearance: none !important;
            background-clip: padding-box;
            background-color: white;
            vertical-align: middle;
            border-radius: 0.25rem;
            border: 1px solid #e0e0e5;
            font-size: 1rem;
            width: 100%;
            line-height: 2;
            padding: 0.375rem 1.25rem;
            -webkit-transition: border-color 0.2s;
            -moz-transition: border-color 0.2s;
            transition: border-color 0.2s;
        }

            input[type="search"]:focus {
                transition: all 0.5s;
                box-shadow: 0 0 40px #f9d442b9;
                border-color: #f9d342;
                outline: none;
            }

        form.search-form {
            display: flex;
            justify-content: center;
        }

        label {
            flex-grow: 1;
            flex-shrink: 0;
            flex-basis: auto;
            align-self: center;
            margin-bottom: 0;
        }

        input.search-field {
            margin-bottom: 0;
            flex-grow: 1;
            flex-shrink: 0;
            flex-basis: auto;
            align-self: center;
            height: 51px;
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        input.search-submit {
            height: 51px;
            margin: 0;
            padding: 1rem 1.3rem;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            border-top-right-radius: 0.25rem;
            border-bottom-right-radius: 0.25rem;
            font-family: "Font Awesome 5 Free";
            font-size: 1rem;
        }

        .screen-reader-text {
            clip: rect(1px, 1px, 1px, 1px);
            position: absolute !important;
            height: 1px;
            width: 1px;
            overflow: hidden;
        }

        .button {
            display: inline-block;
            font-weight: 600;
            font-size: 0.8rem;
            line-height: 1.15;
            letter-spacing: 0.1rem;
            text-transform: uppercase;
            background: black;
            color: white;
            border: 1px solid transparent;
            vertical-align: middle;
            text-shadow: none;
            -webkit-transition: all 0.2s;
            -moz-transition: all 0.2s;
            transition: all 0.2s;
        }

            .button:hover,
            .button:active,
            .button:focus {
                cursor: pointer;
                background: blue;
                color: #292826;
                outline: 0;
            }

    </style>
</header>

<div class="col-6 flex-column d-inline">

    <div class="container14">
        <form role="search" method="get" class="search-form form" action="">
            <label>
                <span class="screen-reader-text">Search for...</span>
                <input type="search" class="search-field" placeholder="Type something..." value="" name="s" title="" />
            </label>
            <input type="submit" class="search-submit button" value="&#xf002" />
        </form>
    </div>
    <br />
    @*<div class="col-6 float-end  text-right">
        <a asp-controller="ChronicMed" asp-action="Add_Medication" asp-route-ID="" class="btn btn-primary mx-1">Add Medication</a>
    </div>*@

</div>




@if (Model != null)

{

       @* <a asp-controller="ChronicMed" asp-action="Add_Medication" asp-route-ID="" class="btn btn-primary mx-1">Add Medication</a>*@


        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
               
                    <th>
                        #
                    </th>
                    <th>
                        Medication Name
                    </th>
                    <th>
                        Manufacturer
                    </th>
                    <th>
                        Active Ingredient
                    </th>
                    <th>
                        Dosage Form
                    </th>
                    <th>
                        Description
                    </th>
                   
                </tr>
            </thead>

            <tbody>
            @foreach (var apt in Model)
            {
                row++;

                        <tr>
                    
                            <td width="9%">@row</td>
                            <td width="30%">@apt.MedicationName</td>
                            <td width="30%">@apt.Manufacturer</td>
                            <td width="30%">@apt.ActiveIngredient</td>
                            <td width="30%">@apt.DosageForm</td>
                            <td width="30%">@apt.Description</td>
                   
                            
                        </tr>

            }

            </tbody>

        </table>


}
else
{
        <h1>No Medication Available</h1>
}



