@{
     ViewData["Title"] = "Prescription";
    Layout = "~/Views/Shared/_FamilyPlanLayout.cshtml";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: slategray;
            color: white;
            padding: 10px 0;
            text-align: center;
        }

        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        nav li {
            display: inline;
            margin-right: 20px;
        }

        nav a {
            text-decoration: none;
            color: white;
        }

        main {
            padding: 20px;
        }

        .section {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .section h2 {
            margin-bottom: 15px;
            font-size: 24px;
        }

        .prescription-form {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .prescription-form label,
        .prescription-form input[type="text"],
        .prescription-form textarea,
        .prescription-form select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .prescription-form textarea {
            resize: vertical;
        }

        .button-container {
            display: flex;
            justify-content: flex-end;
            width: 100%;
            margin-top: 10px;
        }

        .button-container button {
            background-color: slategray;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
        }
    </style>
    <title>Hospital Family Planning Prescription</title>
</head>
<body>
    <header>
        <h1>Prescription and refills</h1>
        <nav>
            <ul>
                <li><a @Html.ActionLink("Home", "Index" , "Home", new{area = ""}, new{})</a></li>
                <li><a @Html.ActionLink("Prescriptions", "Prescription" , "Home", new{area = ""}, new{})</a></li>
                <li><a @Html.ActionLink("Contact", "Contact" , "Home", new{area = ""}, new{})</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="section">
            <h2>Prescription Refill</h2>
            <form class="prescription-form" action="#" method="post">
                <div>
                    <label for="patient-name">Patient Name</label>
                    <input type="text" id="patient-name" name="patient-name" required>
                </div>
                <div>
                    <label for="age">Age</label>
                    <input type="number" id="age" name="age" required>
                </div>
                <div>
                    <label for="prescription-type">Prescription Type</label>
                    <select id="prescription-type" name="prescription-type" required>
                        <option value="birth-control">Birth Control Pills</option>
                        <option value="contraception">Contraceptive Rings</option>
                        <option value="contraceptive-patches">Contraceptive Patches</option>
                        <option value="intrauterine-devices">Intrauterine Devices</option>
                        <option value="dmpa-injections">DMPA Injections</option>
                        
                    </select>
                </div>
                <div>
                    <label for="prescription-details">Prescription Details</label>
                    <textarea id="prescription-details" name="prescription-details" rows="5" required></textarea>
                </div>
                <div class="button-container">
                    <button type="submit">Submit Refill</button>
                </div>
            </form>
        </section>

        <section class="section">
            <h2>Benefits of Family Planning</h2>
            <p>Effective family planning offers numerous advantages, including improved maternal and child health, enhanced education and career opportunities for women, reduced poverty, and controlled population growth.</p>
        </section>
    </main>

</body>
</html>
