    /* Styles for the header and logo */
    .invoice-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background-color: #007BFF;
        color: #fff;
    }



    /* Styles for the invoice details */
    .invoice-details h4 {
        font-size: 20px;
        margin: 0;
    }

    .invoice-details h2 {
        font-size: 24px;
        margin: 0;
    }

