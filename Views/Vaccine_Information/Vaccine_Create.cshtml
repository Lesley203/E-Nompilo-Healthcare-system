@model E_Nompilo_Healthcare_system.Models.Vaccine_Information

@{
    ViewData["Title"] = "Vaccine_Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<h4 class="text-center font-bold">Vaccine Information</h4>
<hr />
<div class="row">
    <div class="col-lg-10 w-100">
        <form method="post" asp-action="Vaccine_Create" class="needs-validation vaccine-form " style="margin-left:170px;" novalidate>
            
            <div class="form-group">
                <label asp-for="VaccineName" class="control-label">Vaccine Name</label>
                <input asp-for="VaccineName" class="form-control" required/>
                <div class="invalid-feedback">
                    Please enter the vaccine name!
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VaccineType" class="control-label">Vaccine Type</label>
                <input asp-for="VaccineType" class="form-control" required />
                <div class="invalid-feedback">
                    Please enter the vaccine type!
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VaccineDescription" class="control-label">Vaccine Description</label>
                <input asp-for="VaccineDescription" class="form-control" required />
                <div class="invalid-feedback">
                   Enter Vaccine description!
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Dose_Number" class="control-label">Dose Number</label>
                <input asp-for="Dose_Number" class="form-control" required />
                <div class="invalid-feedback">
                    Please enter the dosage number!
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
<style>
    /* Style for the form container */
    .vaccine-form {
        background-color: #f5f5f5;
        border: 1px solid #ccc;
        padding: 20px;
       
        border-radius: 5px;
    }

    /* Style for labels */
    .control-label {
        font-weight: bold;
    }

    /* Style for text input fields */
    .form-control {
        width: 100%;
        padding: 8px;
        margin: 5px 0;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    /* Style for the submit button */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 3px;
        cursor: pointer;
    }

        /* Hover effect for the submit button */
        .btn-primary:hover {
            background-color: #0056b3;
        }

</style>


