@model IEnumerable<E_Nompilo_Healthcare_system.Models.Ultra_Sound_Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PreNatalLayout.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.bootstrap4.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
</head>
@if (TempData["Results"] != null)
{
    <div id="myModal" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-primary">
                    <h3 class="modal-title">Ultrasound Image</h3>
                    <button type="button" id="close" class="close btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (Convert.ToString(TempData["Image"]) == "1")
                    {
                        <img src="~/images/111.png" class="rounded mx-auto d-block" alt="Image 1" style="width:300px" />
                        <h4>@TempData["Results"]</h4>
                    }
                    else if (Convert.ToString(TempData["Image"]) == "2")
                    {
                        <img src="~/images/Week6 - Week10.png" class="rounded mx-auto d-block" alt="Image 2" />
                        <h4>@TempData["Results"]</h4>
                    }
                    else if (Convert.ToString(TempData["Image"]) == "3")
                    {
                        <img src="~/images/Week6 - Week10.png" class="rounded mx-auto d-block" alt="Image 3" />
                        <h4>@TempData["Results"]</h4>
                    }
                </div>
            </div>
        </div>
    </div>
}

<p>
    <a class="btn btn-primary border border-secondary" asp-action="Create">Create New</a>
</p>

<table id="myTable" class="table table-bordered border border-danger table-striped">
    <thead class="table-dark table-active text-white text-uppercase">
        <tr>
            <th class="text-white">@Html.DisplayNameFor(model => model.Date)</th>
            <th class="text-white">Patient Name</th>
            <th class="text-white">@Html.DisplayNameFor(model => model.Status)</th>
            <th class="text-white">@Html.DisplayNameFor(model => model.Total) </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MainUser.FirstName) @Html.DisplayFor(modelItem => item.MainUser.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                   
                    <a asp-action="Delete" asp-route-id="@item.NutritionTrackingID" class="btn btn-primary btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/js/site.js"></script>
