@{
   ViewData["Title"] = "Manage_Screening";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Screening Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }
        th {
            background-color: #f5f5f5;
        }
        .actions {
            display: flex;
            gap: 10px;
        }
        .action-button {
            padding: 8px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s, color 0.3s;
        }
        .approve {
            background-color: #28a745;
            color: #fff;
        }
        .decline {
            background-color: #dc3545;
            color: #fff;
        }
        .reschedule {
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Screening Management</h1>
        <table>
            <thead>
                <tr>
                    <th>Patient Name</th>
                    <th>Age</th>
                    <th>Screening Date</th>
                    <th>Screening Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Jane Williams</td>
                    <td>30</td>
                    <td>2023-09-15</td>
                    <td>Pap Smear</td>
                    <td class="actions">
                        <button class="action-button approve">Approve</button>
                        <button class="action-button decline">Decline</button>
                        <button class="action-button reschedule">Reschedule</button>
                    </td>
                </tr>
                <tr>
                    <td>Jane Smith</td>
                    <td>28</td>
                    <td>2023-09-18</td>
                    <td>STD Testing</td>
                    <td class="actions">
                        <button class="action-button approve">Approve</button>
                        <button class="action-button decline">Decline</button>
                        <button class="action-button reschedule">Reschedule</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>

