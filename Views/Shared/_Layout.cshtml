    <style>
        .imgg {
            filter: brightness(108%);
           /* padding-bottom: 50px;*/
            width:225px;
            height: 90px;
            padding-left: 5px;

        }

        .app-brand {
            position: relative;
            display: block;
           
        }

            .app-brand a {
                display: flex;
                flex-direction: row;
                align-items: center;
                height: 90px;
                line-height: 75px;
                width: 250px;
                transition: width 0.3s ease-in-out;
            }
    </style>
</head>

<body>
    <header class="Layout_header " style="z-index:9999999; position:fixed; width:100%;">
        <div class="" id="navbar">

            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  border-bottom box-shadow ">
                <div class="container-fluid">
                    <div class="app-brand">
                        <a style="width:300px; padding-left:6px;" title=" Dashboard">

                            <img src="~/images/111.png" class=" imgg float-start">

                        </a>
                    </div>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"  aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span style="z-index:9999;" class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1" style="margin-left:10px;">
                            <li class="nav-item">
                                <a class="nav-link navbar-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-fw fa-home"></i>Home</a>
                            </li>
                            <li class="nav-item">
                            </li>
                            <li class="nav-item "style="margin-left:10px;">
                                <a class="nav-link navbar-light " asp-area="" asp-controller="Home" asp-action="About"><i class="material-icons" style="font-size:10px"></i>About_us</a>
                            </li>
                            <li class="nav-item" style="margin-left:10px;">
                                <a class=" nav-link navbar-light" asp-area="" asp-controller="Home" asp-action="Contact"><i class="fa fa-phone-square" style="font-size:17px"></i>Contact</a>
                            </li>

                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer">
        <footer class="text-white text-center text-lg-start" style="background-color: #23242a;">

            <div class="container p-4">

                <div class="row mt-4">

                    <div class="col-lg-4 col-md-12 mb-4 mb-md-0">
                        <h5 class="text-uppercase mb-4">About company</h5>

                        <p>
                            Founded in 2023. Improvement of health via the prevention, diagnosis, treatment, amelioration or cure of disease, 
                            illness, injury, and other physical and mental impairments in people.
                            Health care is delivered by health professionals and allied health fields.
                        </p>

                        <div class="mt-4">

                            <a  class="btn btn-floating btn-warning btn-lg"><i class="fab fa-facebook-f"></i></a>

                            <a  class="btn btn-floating btn-warning btn-lg"><i class="fab fa-dribbble"></i></a>

                            <a  class="btn btn-floating btn-warning btn-lg"><i class="fab fa-twitter"></i></a>

                            <a  class="btn btn-floating btn-warning btn-lg"><i class="fab fa-google-plus-g"></i></a>

                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                        <h5 class="text-uppercase mb-4 pb-1">Location</h5>

                        <ul class="fa-ul" style="margin-left: 1.65em;">
                            <li class="mb-3">
                                <span class="fa-li"><i class="fas fa-home"></i></span><span class="ms-2">East London, 6001, SA</span>
                            </li>
                            <li class="mb-3">
                                <span class="fa-li"><i class="fas fa-envelope"></i></span><span class="ms-2">EHealthcare@Yahoo.ac.za</span>
                            </li>
                            <li class="mb-3">
                                <span class="fa-li"><i class="fas fa-phone"></i></span><span class="ms-2">+ 01 677 567 88</span>
                            </li>
                            <li class="mb-3">
                                <span class="fa-li"><i class="fas fa-print"></i></span><span class="ms-2">+ 01 413 567 89</span>
                            </li>
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                        <h5 class="text-uppercase mb-4">Opening hours</h5>

                        <table class="table text-center text-white">
                            <tbody class="font-weight-normal">
                                <tr>
                                    <td>Mon - Thu:</td>
                                    <td>8am - 9pm</td>
                                </tr>
                                <tr>
                                    <td>Fri - Sat:</td>
                                    <td>8am - 1am</td>
                                </tr>
                                <tr>
                                    <td>Sunday:</td>
                                    <td>9am - 12pm</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>

            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © 2023 
                <a class="text-white" asp-area="" asp-controller="Home" asp-action="Index">E-nompilo Healthcare System</a> <li class="nav-item" style="margin-left:10px;">
                    <a class=" nav-link text-dark" asp-area="" asp-controller="TimeSpan" asp-action="Index"><i class="fa fa-phone-square" style="font-size:17px"></i></a>
                </li>
            </div>
            <div>
                <li class="nav-item" style="margin-left:10px;">
                    <a class=" nav-link text-dark" asp-controller="TimeSpan" asp-action="Index"><i class="fa fa-phone-square" style="font-size:17px"></i>i</a>
                </li>
            </div>

        </footer>

    </div>



    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/stickyNav.js" asp-append-version="true"></script>
    <script src="~/js/Log_Reg.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
