@model IEnumerable<E_Nompilo_Healthcare_system.Models.Fam_Screening>

@{
    ViewData["Title"] = "All_Screenings";
   Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Patient Screening Results</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        h1 {
            text-align: center;
            margin: 20px 0;
        }

        .row {
            margin: 0 auto;
            width: 80%;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
        }

        th, td {
            padding: 8px 12px;
            text-align: left;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        p {
            margin: 0;
            padding: 5px;
        }
    </style>
</head>
<body>
    <h1>Patient Screening Results</h1>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th> Patient's Names
                    </th>
                    <th>
                        Results
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @item.MainUser.FirstName @item.MainUser.LastName
                    </td>
                    <td>
                        @if (item.Total < 30) {
                            <p>Not fit for Contraceptives</p>
                        }
                        else if (item.Total > 30 && item.Total < 51) {
                            <p>Birth Control pills may work for this patient</p>
                        }
                        else if (item.Total > 51 && item.Total < 65) {
                            <p>1 Year injection may work for this patient</p>
                        }
                        else if (item.Total > 65 && item.Total < 75) {
                            <p>Implant(Nexplanon) may work for this patient</p>
                        }
                        else if (item.Total > 75 && item.Total < 80) {
                            <p>Sterilization may work for this patient</p>
                        }
                        else
                        {
                            <p>3 Year injection may work for this patient</p>
                        }
                        </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

