@model E_Nompilo_Healthcare_system.Models.Review

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_FamilyPlanLayout.cshtml";
}

<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        
        h4 {
            color: #333;
        }
        
        hr {
            border: 1px solid #333;
        }
        
        .row {
            display: flex;
            justify-content: center;
        }
        
        .col-md-4 {
            margin: 10px;
            padding: 20px;
            border: 1px solid #ccc;
            background-color: #f8f8f8;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            font-weight: bold;
        }
        
        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        
        select.form-control {
            height: 34px;
        }
        
        .btn-primary {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        
        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h4>Review your Experience with us</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Method" class="control-label">Method</label>
                    <select asp-for="Method" class="form-control">
                        <option value="Intrauterine Device (IUD)">Intrauterine Device (IUD)</option>
                        <option value="Birth Control Pills">Birth Control Pills</option>
                        <option value="Birth Control Shot (Depo-Provera)">Birth Control Shot (Depo-Provera)</option>
                        <option value="Birth Control Implant (Nexplanon)">Birth Control Implant (Nexplanon)</option>
                        <option value="Long-Acting Reversible Contraceptives">Long-Acting Reversible Contraceptives</option>
                        <option value="Sterilization">Sterilization</option>
                    </select>
                    <span asp-validation-for="Method" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reviews" class="control-label"></label>
                    <textarea asp-for="Reviews" class="form-control"></textarea>
                    <span asp-validation-for="Reviews" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Review" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>

