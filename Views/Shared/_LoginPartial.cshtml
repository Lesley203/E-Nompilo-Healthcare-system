@using E_Nompilo_Healthcare_system.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<HealthcareSystemUser> SignInManager
@inject UserManager<HealthcareSystemUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item float-right float-end">
            <a class="nav-link navbar-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item float-right float-end">
            <a class="nav_bac nav-link navbar-light" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-sign-in" style="font-size:17px; color:red"></i>Login</a>
    </li>
}
</ul>
