
@{
    ViewData["Title"] = "ChronicMed";
    Layout = "~/Views/Shared/_ChronicMedLayout.cshtml";

}
<style>
    #dash-con {
        background: rgba( 0, 42, 255, 0.75 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 0px );
        -webkit-backdrop-filter: blur( 0px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );
    }

        #dash-con:hover {
            background: rgba( 0, 42, 255, 1 );
            box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
            backdrop-filter: blur( 20px );
            -webkit-backdrop-filter: blur( 20px );
            border-radius: 10px;
            border: 1px solid rgba( 255, 255, 255, 0.18 );
        }
</style>
<h1>Welcome <span class="text-danger"></span><span class="text-primary">Chronic</span> <bold>Medication</bold></h1>
<hr />
<div class="container-fluid pt-4 px-4">

    <div class="row g-4">
        <div class=" col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
            <div id="dash-con" class="dash-con rounded d-flex align-items-center justify-content-between p-4">
                <img src="~/images/Prescription.jpg" style="width: 79px" />
                <div class="ms-3">
                     <a asp-controller="ChronicMed" asp-action="DoctorrequestPresrip_List" class="sidenav-item-link" data-target="#documentation"
                               aria-expanded="false" aria-controls="documentation">
                    <h4 class="mb-2">Prescriptions<span class="badge bg-primary rounded-pill text-white"></span></h4>
                    </a>
                </div>
            </div>
        </div>


        <div class="col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal1">
            <div id="dash-con" class="dash-con rounded d-flex align-items-center justify-content-between p-4">
                <img src="~/images/Medical history.jpg" style="width: 65px" />
                <div class="ms-3">
                    <h4 class="mb-2">Medical History</h4>

                </div>
            </div>
        </div>


        <div class="col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal1">
            <div id="dash-con" class=" dash-con rounded d-flex align-items-center justify-content-between p-4">
                <img src="~/images/Alerts.jpeg" style="width: 65px" />
                <div class="ms-3">
                    <h4 class="mb-2">Alerts</h4>

                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal1">
            <div id="dash-con" class="dash-con rounded d-flex align-items-center justify-content-between p-4">
                <img src="~/images/Messages.jpeg" style="width: 65px" />
                <div class="ms-3">
                    <h4 class="mb-2">Messages</h4>

                </div>
            </div>
        </div>
    </div>
</div>


